<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-8 col-md-offset-2">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Configuación</legend>
        </div>
        <div class="form-group org-panel">
          <div class="row">
            <label for="select" class="col-lg-12 control-label">Configuración de puestos</label>
            <hr>
          </div>
          <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-hover ">
                  <thead>
                    <tr>
                      <th>Número</th>
                      <th>Nombre</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @positions.each do |position| %>
                      <form action="/positions/update" method="POST">
                        <tr>
                          <td>
                            <input type="text" class="form-control" id="inputDefault" name="position_number" value="<%= position.position_number %>">
                          </td>
                          <td>
                            <input type="text" class="form-control" id="inputDefault" name="name" value="<%= position.name %>">
                          </td>
                          <td>
                            <input type="hidden"value="<%= position.id %>" name="id"/>
                            <input type="hidden"value="<%= form_authenticity_token() %>" name="authenticity_token"/>
                            <button class="btn btn-default save-changes" type="submit" >Guardar cambios</button>
                            <button type="button" class="btn btn-default">
                              <%= link_to "Eliminar", {action: 'delete',id: position.id} %>
                            </button>
                          </td>
                        </tr>
                      </form>
                    <% end %>
                  </tbody>
                </table>
              <div class="col-md-6">
                <a href="/positions/new">
                  <button type="button" class="btn btn-success">Añadir puesto</button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    <div class="col-md-6">
      <a href="/settings">
        <button type="submit" class="btn btn-info">Volver</button>
      </a>
    </div>
  </div>
</div>
<% end %>

<script>
    (function(){
        if( window.localStorage ){
            if( !localStorage.getItem( 'firstLoad' ) ){
              localStorage[ 'firstLoad' ] = true;
              window.location.reload();
            }
        else
          localStorage.removeItem( 'firstLoad' );
        }
    })();
</script>
