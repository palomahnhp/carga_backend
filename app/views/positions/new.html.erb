<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-8 col-md-offset-2">
    <fieldset>
      <div class="row">
        <legend class="col-lg-12">Configuación</legend>
      </div>
      <div class="form-group org-panel">
        <div class="row">
          <label for="select" class="col-lg-12 control-label">Creación de puestos</label>
          <hr>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <form action="/positions/create" method="POST" >
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Número</th>
                  <th>Nombre</th>
                  <th>Unidad</th>
                </tr>
              </thead>
              <tbody>
                    <tr>
                      <td>
                        <input type="text" class="form-control" id="inputDefault" name="position_number">
                      </td>
                      <td>
                        <input type="text" class="form-control" id="inputDefault" name="name">
                      </td>
                      <td>
                        <select class="form-control" id="select" name="unit_id">
                          <% Unit.all.each do |unit| %>
                          <option value="<%= unit.id %>"><%= unit.name %></option>
                          <% end %>
                        </select>
                      </td>
                    </tr>
              </tbody>
            </table>
            <input type="hidden"value="<%= form_authenticity_token() %>" name="authenticity_token"/>
            <button class="btn btn-default save-changes" type="submit" >Crear puesto</button>
            </form>
          </div>
        </div>
      </div>
    </fieldset>
    <div class="col-md-6">
      <a href="/positions">
        <button type="submit" class="btn btn-info">Volver</button>
      </a>
    </div>
  </div>
</div>
<% end %>
