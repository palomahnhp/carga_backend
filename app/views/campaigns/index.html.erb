<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Configuración</legend>
        </div>
        <div class="form-group org-panel">
          <div class="row">
            <label for="select" class="col-lg-12 control-label">Administración de campañas</label>
            <hr>
          </div>
          <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-hover ">
                  <thead>
                    <tr>
                      <th>Campaña</th>
                      <th>Estado</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @campaigns.each do |campaign| %>
                        <tr>
                          <td>
                            <%= campaign.name %>
                          </td>
                          <% if campaign.status == 'active' %>
                            <td>
                            En curso
                            </td>
                          <% elsif campaign.status == 'completed' %>
                            <td>
                             Finalizada
                            </td>
                          <% else %>
                            <td>
                              En borrador
                            </td>
                          <% end %>
                          <td>
                            <button type="button" class="btn btn-default">
                              <%= link_to "Editar campaña", {action: 'edit',id: campaign.id} %>
                            </button>
                          </td>
                        </tr>
                    <% end %>
                  </tbody>
                </table>
              <div class="col-md-6">
                <a href="/campaigns/new">
                  <button type="button" class="btn btn-success">Añadir campaña</button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    <div class="col-md-6">
      <a href="/settings">
        <button type="submit" class="btn btn-primary">Volver</button>
      </a>
    </div>
  </div>
</div>
<% end %>
