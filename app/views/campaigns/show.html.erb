<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Configuración</legend>
        </div>
        <div class="form-group org-panel">
          <div class="row">
            <label for="select" class="col-lg-12 control-label">Administración de campañas</label>
            <hr>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <table class="table table-striped table-hover ">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Campaña</th>
                    <th>Estado</th>
                    <th>Fecha de inicio</th>
                    <th>Fecha de finalización</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <%= @campaign.id %>
                    </td>
                    <td>
                      <%= @campaign.name %>
                    </td>
                    <% if @campaign.status == 'active' %>
                      <td>
                        En curso
                      </td>
                    <% elsif @campaign.status == 'completed' %>
                      <td>
                        Finalizada
                      </td>
                    <% else %>
                      <td>
                        En borrador
                      </td>
                    <% end %>
                    <% if @campaign.status == 'active' %>
                      <td>
                        Inicializada el <%= @campaign.created_at.strftime("%d/%m/%y") %>
                      </td>
                    <% elsif @campaign.status == 'completed' %>
                      <td>
                        Inicializada el <%= @campaign.created_at.strftime("%d/%m/%y") %>
                      </td>
                    <% else %>
                      <td>
                        Aún en borrador
                      </td>
                    <% end %>
                    <% if @campaign.status == 'active' %>
                      <td>
                        Aún activa
                      </td>
                    <% elsif @campaign.status == 'completed' %>
                      <td>
                        Finalizada el <%= @campaign.updated_at.strftime("%d/%m/%y") %>
                      </td>
                    <% else %>
                      <td>
                        Aún en borrador
                      </td>
                    <% end %>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </fieldset>
    <div class="col-md-6">
      <a href="/campaigns?search=<%= params[:search] %>">
        <button type="submit" class="btn btn-primary">Volver</button>
      </a>
    </div>
  </div>
</div>
<% end %>
