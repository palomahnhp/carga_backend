    <form action="/surveys/create" method="POST">
      <fieldset>
        <!--<div class="per-bar">
          <h5><b>Tiempo restante: <%= @total_per %>%</b></h5>
          <div class="progress progress-striped">
            <div class="progress-bar progress-bar-success" style="width: <%= @total_per %>%"></div>
