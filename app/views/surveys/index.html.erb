<% if @current_user.positions == [] || @current_user.responses != [] || @current_user.positions.first.unit.campaign.status != "active"  %>
  <div class="row element-style">
    <div class="col-md-5 col-md-offset-3">
      <div class="row">
        <div class="col-md-5 col-md-offset-4 survey-icon">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 col-md-offset-1">
          <h1>No tienes campa√±as activas</h1>
        </div>
        <a href="/">
          <button type="submit" class="btn btn-primary" id="n-survey-btn">Volver</button>
        </a>
      </div>
    </div>
  </div>
<% else %>
  <div class="row element-style">
    <div class="col-md-5 col-md-offset-3">
      <div class="row">
        <div class="col-md-5 col-md-offset-4 survey-icon">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 col-md-offset-2">
          <ul>
            <% @current_user.positions.each do |position| %>
              <li><a href="/surveys/show" id="btn-surveys" class="btn btn-primary btn-lg btn-a">
                <%= position.name %>
              </a></li>
            <% end %>
          </ul>
        </div>
        <div class="col-md-6">
          <a href="/">
            <button type="submit" class="btn btn-primary btn-surveys">Volver</button>
          </a>
        </div>
      </div>
    </div>
  </div>
<% end %>
