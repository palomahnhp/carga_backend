<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-8 col-md-offset-2">
    <form class="form-horizontal">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Configuación</legend>
        </div>
        <div class="form-group org-panel">
          <div class="row">
            <label for="select" class="col-lg-12 control-label">Configuración de campañas</label>
            <hr>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <table class="table table-striped table-hover ">
                <thead>
                  <tr>
                    <th>Campaña</th>
                    <th>Estado</th>
                    <th>Nivel de respuesta</th>
                    <th id="mail-legend">Añadir usuarios</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Campaña 1</td>
                    <td>Completada</td>
                    <td>
                      <div class="progress progress-striped">
                        <div class="progress-bar progress-bar-success" style="width: 100%"></div>
                      </div>
                    </td>
                    <td>
                      <i class="fa fa-user fa-6 mail-icon-user" aria-hidden="true"></i>
                      <i class="fa fa-users fa-6 mail-icon-users" aria-hidden="true"></i>
                    </td>
                    <td></td>
                  </tr>
                  <tr>
                    <td>Campaña 2</td>
                    <td>Activa</td>
                    <td>
                      <div class="progress progress-striped">
                        <div class="progress-bar progress-bar-success" style="width: 65%"></div>
                      </div>
                    </td>
                    <td>
                      <i class="fa fa-user fa-6 mail-icon-user" aria-hidden="true"></i>
                      <i class="fa fa-users fa-6 mail-icon-users" aria-hidden="true"></i>
                    </td>
                    <td>Terminar campaña</td>
                  </tr>
                  <tr>
                    <td>Campaña 3</td>
                    <td>Pendiente...</td>
                    <td>
                      <div class="progress progress-striped">
                        <div class="progress-bar progress-bar-success" style="width: 1%"></div>
                      </div>
                    </td>
                    <td>
                      <i class="fa fa-user fa-6 mail-icon-user" aria-hidden="true"></i>
                      <i class="fa fa-users fa-6 mail-icon-users" aria-hidden="true"></i>
                    </td>
                    <td>Comenzar campaña</td>
                  </tr>
                  <tr>
                    <td>Campaña 4</td>
                    <td>Pendiente...</td>
                    <td>
                      <div class="progress progress-striped">
                        <div class="progress-bar progress-bar-success" style="width: 1%"></div>
                      </div>
                    </td>
                    <td>
                      <i class="fa fa-user fa-6 mail-icon-user" aria-hidden="true"></i>
                      <i class="fa fa-users fa-6 mail-icon-users" aria-hidden="true"></i>
                    </td>
                    <td>Comenzar campaña</td>
                  </tr>
                </tbody>
              </table>
              <button type="button" class="btn btn-success">Añadir campaña</button>
            </div>
          </div>
        </div>
      </fieldset>
    </form>
    <div class="col-md-6">
      <a href="/settings">
        <button type="submit" class="btn btn-info">Volver</button>
      </a>
    </div>
  </div>
</div>
<% end %>
