<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-8 col-md-offset-2">
    <form class="form-horizontal">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Seguimiento</legend>
        </div>
        <div class="form-group org-panel">
          <div class="row">
            <label for="select" class="col-lg-12 control-label">Porcentaje de respuestas de la encuesta</label>
            <hr>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <table class="table table-striped table-hover ">
                <thead>
                  <tr>
                    <th>Unidad</th>
                    <th>Respondido</th>
                    <th>Barra porcentual</th>
                    <th id="mail-legend">Enviar email</th>
                  </tr>
                </thead>
                <tbody>
                  <% Unit.all.each do |unit| %>
                    <tr>
                      <td><%= unit.name %></td>
                      <td><%= response_level = Random.rand(101) %>%</td>
                      <td>
                        <div class="progress progress-striped">
                          <div class="progress-bar progress-bar-success" style="width: <%= response_level %>%"></div>
                        </div>
                      </td>
                      <td>
                        <a data-toggle="modal" href="#user-list">
                          <i class="fa fa-user fa-6 mail-icon-user" aria-hidden="true"></i>
                        </a>
                        <a href="/show_mail">
                          <i class="fa fa-users fa-6 mail-icon-users" aria-hidden="true"></i>
                        </a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </fieldset>
    </form>
    <div class="col-md-6">
      <a href="/">
        <button type="submit" class="btn btn-info">Volver</button>
      </a>
    </div>
  </div>
</div>

<div class="modal" id="user-list">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Lista de usuarios</h4>
      </div>
      <div class="modal-body">
        <% Unit.first.positions.each do |x| %>
          <% x.users.each do |z| %>
            <div class="radio">
              <label>
                <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                <%= z.name %> <%= z.last_name %> <%= z.last_name_alt %>
              </label>
            </div>
          <%end%>
        <%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">Cerrar</button>
        <a href="/show_mail">
          <button type="submit" class="btn btn-success">Enviar correo</button>
        </a>
      </div>
    </div>
  </div>
</div>
<% end %>

<script>
    $(".mail-icon-user").click(function(){
        $('#user-list').modal('show');
    });
</script>
