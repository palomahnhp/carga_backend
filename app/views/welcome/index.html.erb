<% if @current_user %>
  <div class="row element-style">
      <div class="row">
        <div class="col-md-11 form-style">
          <div class="main-title">
            <h1 id="welcome-title"><%= @greeting %>,  <%= @current_user.name.downcase.capitalize %>!</h1>
          </div>
          <br>
          <div class="welcome-settings-panel">
            <div class="col-md-6 settings-col">
              <a href="/surveys">
                <div class="thumbnail welcome-panel-left">
                  <div>
                    <i class="fa fa-pencil-square-o"></i>
                  </div>
                  <div class="caption">
                    <h4 id="h4-settings">Encuestas</h4>
                  </div>
                </div>
              </a>
            </div>
            <% if @current_user.superadmin_role? || @current_user.admin_role? %>
              <div class="col-md-6 settings-col">
                <a href="/admin">
                  <div class="thumbnail welcome-panel">
                    <div>
                      <i class="fa fa-cogs"></i>
                    </div>
                    <div class="caption">
                      <h4 id="h4-settings">Administraci√≥n</h4>
                    </div>
                  </div>
                </a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
