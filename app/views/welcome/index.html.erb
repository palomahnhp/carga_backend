<div class="row element-style">
  <div class="col-md-5 col-md-offset-3">
    <div class="row">
      <img id="ayto-logo-admin" src="/assets/ayto.png">
    </div>
    <div class="row">
      <% if @current_user && @current_user.respondent_role? %>
        <div class="col-md-10 col-md-offset-3">
        	<a href="/surveys" class="btn btn-success btn-lg btn-index-a">Encuestas</a>
        </div>
      <% end %>
      <% if @current_user && @current_user.admin_role? %>
        <div class="col-md-11 col-md-offset-2">
          <a href="/surveys" class="btn btn-success btn-lg btn-a">Encuestas</a>
          <a href="/admin" class="btn btn-default btn-lg btn-a">Administración</a>
        </div>
      <% end %>
      <% if @current_user && @current_user.superadmin_role? %>
        <div class="col-md-11 col-md-offset-2">
          <a href="/surveys" class="btn btn-success btn-lg btn-a">Encuestas</a>
          <a href="/admin" class="btn btn-default btn-lg btn-a">Administración</a>
        </div>
      <% end %>
    </div>
  </div>
</div>
