<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Respuestas</legend>
        </div>
        <div class="form-group org-panel">
          <div class="row">
            <div class="col-lg-12">
              <div class="col-lg-4 pull-right">
                <%= form_tag(responses_path, method: "get", id: "search-form") do%>
                <%= text_field_tag :search, params[:search], class:"form-control search-input col-lg-2", placeholder: "Buscar usuario" %>
                <%= submit_tag "Buscar", class:"btn btn-primary search-btn" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group org-panel">
          <div class="row">
            <label for="select" class="col-lg-12 control-label">Lista de usuarios</label>
            <hr>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Nº Usuario</th>
                    <th>Usuario</th>
                    <th>Email</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @users.present? %>
                    <% @users.each do |user| %>
                        <tr>
                          <td>
                            <%= user.user_num %>
                          </td>
                          <td>
                            <%= user.name %> <%= user.last_name %> <%= user.last_name_alt %>
                          </td>
                          <td>
                            <%= user.email %>
                          </td>
                          <td>
                            <%= link_to(content_tag(:button, 'Respuestas', class: 'btn btn-primary'), controller: 'responses', action: 'show', id: user.id) %>
                        </tr>
                    <% end %>
                  <% else %>
                    <p>No existe ningún usuario que contenga el término "<%= params[:search] %>".</p>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </fieldset>
    <div class="col-md-6">
      <a href="/settings">
        <button type="submit" class="btn btn-primary">Volver</button>
      </a>
    </div>
  </div>
</div>
<% end %>
