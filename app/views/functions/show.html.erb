<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
    <fieldset>
      <div class="row">
        <legend class="col-lg-12">Vista de Función</legend>
      </div>
      <div class="form-group org-panel">
        <form action="/functions/update" method="POST">
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Número de función: </b>
              </div>
              <div class="col-md-4">
                <p><%= @function.function_number %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Función: </b>
              </div>
              <div class="col-md-4">
                <p><%= @function.name %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Puesto: </b>
              </div>
              <div class="col-md-4">
                <p>
                  <% if @function.position %>
                      <%= @function.position.name %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          <!-- <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Tipo puesto: </b>
              </div>
              <div class="col-md-4">
                <p><%= @function.position_type.description %></p>
              </div>
            </div>
          </div> -->
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Se contabiliza: </b>
              </div>
              <div class="col-md-4">
                <% if @function.num_task == true %>
                  <p>Sí</p>
                <% else %>
                  <p>No</p>
                <% end %>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <a href="/functions">
          <button type="submit" class="btn btn-primary">Volver</button>
        </a>
      </div>
    </fieldset>
  </div>
</div>
<% end %>
