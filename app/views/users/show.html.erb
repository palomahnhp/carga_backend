<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
    <fieldset>
      <div class="row">
        <legend class="col-lg-12">Configuración de Usuario</legend>
      </div>
      <div class="form-group org-panel">
        <hr>
        <form action="/users/update" method="POST">
          <div class="row edit-row">
            <div class="col-lg-12">

              <div class="col-md-6">
                <div class="row">
                  <div class="col-md-5">
                    <b>Nombre: </b>
                  </div>
                  <div class="col-md-7">
                  <%= @user.name %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <b>Primer apellido: </b>
                  </div>
                  <div class="col-md-7">
                    <%= @user.last_name %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <b>Segundo apellido: </b>
                  </div>
                  <div class="col-md-7">
                  <%= @user.last_name_alt %>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="row">
                  <div class="col-md-5">
                    <b>Código Ayre: </b>
                  </div>
                  <div class="col-md-7">
                    <%= @user.login %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <b>Puesto: </b>
                  </div>
                  <div class="col-md-7">
                    <% @user.positions.each do |position| %>
                      <p><%= position.name %></p><br>
                    <% end %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <b>Perfil: </b>
                  </div>
                  <div class="col-md-7">
                    <% if @user.superadmin_role == true %>
                      <p>Superadministrador</p>
                    <% elsif @user.admin_role == true %>
                      <p>Administrador</p>
                    <% else %>
                      <p>Encuestado</p>
                    <% end %>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="row bottom-panel">
                  <div class="col-md-5">
                    <b>Email: </b>
                  </div>
                  <div class="col-md-7">
                      <%= @user.email %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <b>Teléfono: </b>
                  </div>
                  <div class="col-md-7">
                    <%= @user.phone_number %>
                  </div>
                </div>
                <div class="row bottom-panel">
                  <div class="col-md-5">
                    <b>Tipo de documento: </b>
                  </div>
                  <div class="col-md-7">
                    <% if @user.document? %>
                      <p>DNI</p>
                    <% end %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <b>Documento: </b>
                  </div>
                  <div class="col-md-7">
                    <%= @user.document %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <hr>
        </form>
      </div>
      <div class="col-md-6">
        <a href="/users">
          <button type="submit" class="btn btn-primary">Volver</button>
        </a>
      </div>
    </fieldset>
  </div>
</div>
<% end %>
