<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
    <fieldset>
      <div class="row">
        <legend class="col-lg-12">Configuración de Unidad</legend>
      </div>
      <div class="form-group org-panel">
        <form action="/users/update" method="POST">
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Nombre: </b>
              </div>
              <div class="col-md-4">
                <%= @user.name %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Primer apellido: </b>
              </div>
              <div class="col-md-4">
                <%= @user.last_name %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Segundo apellido: </b>
              </div>
              <div class="col-md-4">
              <%= @user.last_name_alt %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Tipo de documento: </b>
              </div>
              <div class="col-md-4">
                <select class="form-control">
                  <option>
                    DNI
                  </option>
                  <option>
                    Otro
                  </option>
                </select>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Documento: </b>
              </div>
              <div class="col-md-4">
                <%= @user.document %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Puesto: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Código Ayre: </b>
              </div>
              <div class="col-md-4">
                <%= @user.login %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Email: </b>
              </div>
              <div class="col-md-4">
                 @user.email
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Teléfono: </b>
              </div>
              <div class="col-md-4">
                <%= @user.phone_number %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Perfil: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-md-6">
              <input type="hidden"value="<%= @user.id %>" name="id"/>
              <input type="hidden"value="<%= form_authenticity_token() %>" name="authenticity_token"/>
              <button class="btn btn-success save-changes" type="submit" >Guardar cambios</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <a href="/users">
          <button type="submit" class="btn btn-primary">Volver</button>
        </a>
      </div>
    </fieldset>
  </div>
</div>
<% end %>
