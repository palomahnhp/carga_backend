<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
    <fieldset>
      <div class="row">
        <legend class="col-lg-12">Configuración de Usuario</legend>
      </div>
      <div class="form-group org-panel">
        <form action="/users/update" method="POST">
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Nombre: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault" name="name" value="<%= @user.name %>">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Primer apellido: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault" name="last_name" value="<%= @user.last_name %>">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Segundo apellido: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault" name="last_name_alt" value="<%= @user.last_name_alt %>">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Tipo de documento: </b>
              </div>
              <div class="col-md-4">
                <select class="form-control">
                  <option>
                    DNI
                  </option>
                  <option>
                    Otro
                  </option>
                </select>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Documento: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault" name="document" value="<%= @user.document %>">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Puesto: </b>
              </div>
              <div class="col-md-4">
                <% if @user.positions != [] %>
                  <select class="form-control">
                    <% Position.all.each do |position| %>
                      <option value=""
                        <% if position.id == @user.positions.first.id %>
                          selected="selected"
                        <% end %>
                      ><%= position.name %></option>
                    <% end %>
                  </select>
                <% end %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Código Ayre: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault" name="login" value="<%= @user.login %>">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Email: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault" name="email" value="<%= @user.email %>">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Teléfono: </b>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="inputDefault" name="phone_number" value="<%= @user.phone_number %>">
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Perfil*: </b>
              </div>
              <div class="col-md-4">
                <select class="form-control" name="">
                  <% if @user.superadmin_role == true %>
                    <option value="" selected="selected">Superadministrador</option>
                    <option value="">Administrador</option>
                    <option value="">Encuestado</option>
                  <% elsif @user.admin_role == true %>
                    <option value="">Superadministrador</option>
                    <option value="" selected="selected">Administrador</option>
                    <option value="">Encuestado</option>
                  <% else %>
                    <option value="">Superadministrador</option>
                    <option value="">Administrador</option>
                    <option value="" selected="selected">Encuestado</option>
                  <% end %>
                </select>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-md-6">
              <input type="hidden"value="<%= @user.id %>" name="id"/>
              <input type="hidden"value="<%= form_authenticity_token() %>" name="authenticity_token"/>
              <button class="btn btn-success save-changes" type="submit" >Guardar cambios</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <a href="/users">
          <button type="submit" class="btn btn-primary">Volver</button>
        </a>
      </div>
    </fieldset>
  </div>
</div>
<% end %>
