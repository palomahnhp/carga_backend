<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Configuración</legend>
        </div>
        <div class="form-group org-panel">
          <div class="row">
            <label for="select" class="col-lg-12 control-label">Configuración de usuarios</label>
            <hr>
          </div>
          <form action="/users/update" method="POST">
            <div class="row">
              <div class="col-lg-12">
                <div class="col-md-2">
                  <p>Nombre: </p>
                </div>
                <div class="col-md-2">
                  <input type="text" class="form-control" id="inputDefault" name="name" value="<%= @user.name %>">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <div class="col-md-2">
                  <p>Apellidos: </p>
                </div>
                <div class="col-md-2">
                  <input type="text" class="form-control" id="inputDefault" name="name" value="<%= @user.last_name %>">
                </div>
                <div class="col-md-2">
                  <input type="text" class="form-control" id="inputDefault" name="name" value="<%= @user.last_name_alt %>">
                </div>
              </div>
            </div>
          </form>
        </div>
      </fieldset>
    <div class="col-md-6">
      <a href="/users">
        <button type="submit" class="btn btn-primary">Volver</button>
      </a>
    </div>
  </div>
</div>
<% end %>
