<% if can? :settings, @current_user %>
<div class="row element-style">
  <div class="col-md-11 form-style">
    <fieldset>
      <div class="row">
        <legend class="col-lg-12">Configuración de Unidad</legend>
      </div>
      <div class="form-group org-panel">
        <form action="/units/update" method="POST">
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Número de unidad: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.unit_number %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Descripción de unidad: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.name %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Descripción breve: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.alias %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Campaña: </b>
              </div>
              <div class="col-md-4">
                <% Campaign.all.each do |campaign| %>
                  <% if campaign.id == @unit.campaign_id %>
                   <p><%= campaign.name %></p>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Código Área: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.cod_area %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Descripción Área: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.area_name %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Código Dirección: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.cod_dir %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Descripción Dirección: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.dir_name %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Código Subdirección: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.cod_subdir %></p>
              </div>
            </div>
          </div>
          <hr>
          <div class="row edit-row">
            <div class="col-lg-12">
              <div class="col-md-4">
                <b>Descripción Subdirección: </b>
              </div>
              <div class="col-md-4">
                <p><%= @unit.subdir_name %></p>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <a href="/units">
          <button type="submit" class="btn btn-primary">Volver</button>
        </a>
      </div>
    </fieldset>
  </div>
</div>
<% end %>
