<% if can? :settings, @current_user %>
  <div class="row element-style">
    <div class="col-md-11 form-style">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Vista de Unidad</legend>
        </div>
        <div class="form-group org-panel">
          <hr>
          <form>
            <div class="row edit-row">
              <div class="col-lg-12">

                <div class="col-md-6">
                  <div class="row">
                    <div class="col-md-5">
                      <b>Número de unidad: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.unit_number %></p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción de unidad: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.name %></p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción breve: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.alias %></p>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="row">
                    <div class="col-md-5">
                      <b>Campaña: </b>
                    </div>
                    <div class="col-md-7">
                      <% Campaign.all.each do |campaign| %>
                        <% if campaign.id == @unit.campaign_id %>
                         <p><%= campaign.name %></p>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>

                <div class="col-md-6 edit-bottom-panel" style="margin-top: 10px;">
                  <!--<div class="row">
                    <div class="col-md-5">
                      <b>Código Área: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.cod_area %></p>
                    </div>
                  </div>-->
                  <div class="row">
                    <div class="col-md-5">
                      <b>Área: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.area_name %></p>
                    </div>
                  </div>
                  <!--<div class="row bottom-panel">
                    <div class="col-md-5">
                      <b>Código Dirección: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.cod_dir %></p>
                    </div>
                  </div>-->
                  <div class="row">
                    <div class="col-md-5">
                      <b>Dirección: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.dir_name %></p>
                    </div>
                  </div>
                  <!--<div class="row bottom-panel">
                    <div class="col-md-5">
                      <b>Código Subdirección: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.cod_subdir %></p>
                    </div>
                  </div>-->
                  <div class="row">
                    <div class="col-md-5">
                      <b>Subdirección: </b>
                    </div>
                    <div class="col-md-7">
                      <p><%= @unit.subdir_name %></p>
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <hr>
          </form>
        </div>
        <div class="col-md-6">
          <a href="/units">
            <button type="submit" class="btn btn-primary">Volver</button>
          </a>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>
