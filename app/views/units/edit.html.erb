<% if can? :settings, @current_user %>
  <div class="row element-style">
    <div class="col-md-11 form-style">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Configuración de Unidades</legend>
        </div>
        <div class="form-group org-panel">
          <hr>
          <form action="/units/update" method="POST">
            <div class="row edit-row">
              <div class="col-lg-12">

                <div class="col-md-6">
                  <div class="row">
                    <div class="col-md-5">
                      <b>Número de unidad: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="unit_number" value="<%= @unit.unit_number %>">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción de unidad: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="name" value="<%= @unit.name %>">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción breve: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="alias" value="<%= @unit.alias %>">
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="row">
                    <div class="col-md-5">
                      <b>Campaña: </b>
                    </div>
                    <div class="col-md-7">
                      <select class="form-control" id="select" name="campaign_id">
                        <% Campaign.all.each do |campaign| %>
                        <option value="<%= campaign.id %>"
                          <% if campaign.id == @unit.campaign_id %>
                             selected="selected"
                          <% end %>
                          >
                          <%= campaign.name %>
                        </option>
                        <% end %>
                      </select>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Código Área: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="cod_area" value="<%= @unit.cod_area %>">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción Área: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="area_name" value="<%= @unit.area_name %>">
                    </div>
                  </div>
                </div>

                <div class="col-md-6 edit-bottom-panel">
                  <div class="row bottom-panel">
                    <div class="col-md-5">
                      <b>Código Dirección: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="cod_dir" value="<%= @unit.cod_dir %>">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción Dirección: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="dir_name" value="<%= @unit.dir_name %>">
                    </div>
                  </div>
                  <div class="row bottom-panel">
                    <div class="col-md-5">
                      <b>Código Subdirección: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="cod_subdir" value="<%= @unit.cod_subdir %>">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción Subdirección: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="subdir_name" value="<%= @unit.subdir_name %>">
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <hr>
            <div class="row edit-row">
              <div class="col-md-6">
                <input type="hidden"value="<%= @unit.id %>" name="id"/>
                <input type="hidden"value="<%= form_authenticity_token() %>" name="authenticity_token"/>
                <button class="btn btn-success save-changes" type="submit" >Guardar cambios</button>
                <button type="button" class="btn btn-danger">
                  <%= link_to "Eliminar Puesto", {action: 'delete',id: @unit.id}, class: "link-delete" %>
                </button>
              </div>
            </div>
          </form>
        </div>
        <div class="col-md-6">
          <a href="/units">
            <button type="submit" class="btn btn-primary">Volver</button>
          </a>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>
