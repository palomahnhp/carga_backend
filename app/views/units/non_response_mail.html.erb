<% if can? :settings, @current_user %>
<form class="form-horizontal" id="mail-fieldset" action="/units/send_massive_mails" method="get">
  <fieldset>
    <% if params[:all].present? %>
      <legend>Enviar correo electrónico a todos</legend>
    <% elsif params[:dir].present? %>
      <legend>Enviar correo electrónico a directores y subdirectores</legend>
    <% else %>
      <legend>Enviar correo electrónico a usuarios que no han respondido</legend>
    <% end %>
    <div class="form-group">
      <label for="disabledInput" class="col-lg-2 control-label">Remitente</label>
      <div class="col-lg-10">
        <input name="sender" type="text" class="form-control" id="disabledInput" placeholder="cargasdetrabajo@madrid.es" disabled="">
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">Asunto</label>
      <div class="col-lg-10">
        <input name="subject" class="form-control" id="inputEmail" placeholder="Asunto ...">
      </div>
    </div>
    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Mensaje</label>
      <div class="col-lg-10">
        <textarea name="message" class="form-control mail-text" rows="3" placeholder="Escriba su mensaje..."></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <a href="/units/tracking?search=<%= params[:search] %>">
          <button type="reset" class="btn btn-primary">Cancelar</button>
        </a>
        <button type="submit" class="btn btn-primary">Enviar</button>
      </div>
    </div>
  </fieldset>
  <% if params[:search].present? %>
    <input type="hidden" value="<%= params[:search] %>" name="search"/>
  <% end %>
  <% if params[:all].present? %>
    <input type="hidden" value="<%= params[:all] %>" name="all"/>
  <% end %>
  <% if params[:dir].present? %>
    <input type="hidden" value="<%= params[:dir] %>" name="dir"/>
  <% end %>
</form>
<% end %>