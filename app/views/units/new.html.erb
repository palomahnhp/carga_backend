<% if can? :settings, @current_user %>
  <div class="row element-style">
    <div class="col-md-11 form-style">
      <fieldset>
        <div class="row">
          <legend class="col-lg-12">Configuración de Unidades</legend>
        </div>
        <div class="form-group org-panel">
          <hr>
          <form action="/units/create" method="POST">
            <div class="row edit-row">
              <div class="col-lg-12">

                <div class="col-md-6">
                  <div class="row">
                    <div class="col-md-5">
                      <b>Número de unidad: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="unit_number">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción de unidad: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="name">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5">
                      <b>Descripción breve: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="alias">
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="row">
                    <div class="col-md-5">
                      <b>Campaña: </b>
                    </div>
                    <div class="col-md-7">
                      <select class="form-control" id="select" name="campaign_id">
                        <% Campaign.all.each do |campaign| %>
                        <option value="<%= campaign.id %>">
                          <%= campaign.name %>
                        </option>
                        <% end %>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="col-md-6 edit-bottom-panel" style="margin-top: 10px;">
                  <!--<div class="row">
                    <div class="col-md-5">
                      <b>Código Área: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="cod_area">
                    </div>
                  </div>-->
                  <div class="row">
                    <div class="col-md-5">
                      <b>Área: </b>
                    </div>
                    <div class="col-md-7">
                      <select class="form-control" id="area" name="area_name" onchange="filterElement('direction');">
                        <option value=""></option>                        
                        <% Unit.select(:area_name).group(:area_name).each do |unit| %>
                          <option value="<%= unit.area_name %>"><%= unit.area_name %></option>
                        <% end %>
                      </select>
                    </div>
                  </div>
                  <!--<div class="row bottom-panel">
                    <div class="col-md-5">
                      <b>Código Dirección: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="cod_dir">
                    </div>
                  </div>-->
                  <div class="row">
                    <div class="col-md-5">
                      <b>Dirección: </b>
                    </div>
                    <div class="col-md-7">
                      <select class="form-control" id="direction" name="dir_name" onchange="filterElement('subdirection');">
                        <option value=""></option>
                      </select>
                    </div>
                  </div>
                  <!--<div class="row bottom-panel">
                    <div class="col-md-5">
                      <b>Código Subdirección: </b>
                    </div>
                    <div class="col-md-7">
                      <input type="text" class="form-control" id="inputDefault" name="cod_subdir">
                    </div>
                  </div>-->
                  <div class="row">
                    <div class="col-md-5">
                      <b>Subdirección: </b>
                    </div>
                    <div class="col-md-7">
                      <select class="form-control" id="subdirection" name="subdir_name">
                        <option value=""></option>
                      </select>
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <hr>
            <div class="row edit-row">
              <div class="col-md-6">
                <input type="hidden"value="<%= form_authenticity_token() %>" name="authenticity_token"/>
                <button class="btn btn-primary save-changes" type="submit" >Crear Unidad</button>
              </div>
            </div>
          </form>
        </div>
        <div class="col-md-6">
          <a href="/units">
            <button type="submit" class="btn btn-primary">Volver</button>
          </a>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>
